<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="MealBase">
		<defName>Nutrient_Block</defName>
		<label>Nutrient Block</label>
		<description>A block of compressed nutrient paste.</description>
		<graphicData>
			<texPath>Things/Item/Drug/Nutrient_Block</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.85</drawSize>
		</graphicData>
		<stackLimit>1</stackLimit>
		<statBases>
			<MarketValue>25</MarketValue>
			<Mass>0.5</Mass>
			<!--<Nutrition>5.0</Nutrition>-->
		</statBases>
		<techLevel>Industrial</techLevel>
		<ingestible>
			<preferability>NeverForNutrition</preferability>
			<ingestEffect>EatVegetarian</ingestEffect>
			<ingestSound>RawVegetable_Eat</ingestSound>
			<maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
			<!--tasteThought>NutrientBlockEaten</tasteThought-->
		</ingestible>
	</ThingDef>
	
	
	
	<ThingDef ParentName="FurnitureBase">
    <defName>NutrientBlockDispenser</defName>
    <label>nutrient block dispenser</label>
    <description>A small pipe output that dispenses nutrient blocks.</description>
    <thingClass>Building_Storage</thingClass>
    <graphicData>
      <texPath>Things/Building/NutrientPasteFeeder/NutrientPasteFeeder</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <color>(232,255,191)</color>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(1,1)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
      </damageData>
      <drawRotated>false</drawRotated>
      <allowFlip>false</allowFlip>
    </graphicData>
    <rotatable>false</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.5</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <pathCost>50</pathCost>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <Mass>8</Mass>
      <WorkToBuild>800</WorkToBuild>
      <Flammability>0.5</Flammability>
    </statBases>
    <size>(1,1)</size>
    <costList>
      <Steel>20</Steel>
    </costList>
    <building>
      <isMealSource>false</isMealSource>
      <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
      <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
      <forceShowRoomStats>true</forceShowRoomStats>
      <buildingTags>
        <li>Production</li>
      </buildingTags>
      <fixedStorageSettings>
        <filter>
          <disallowNotEverStorable>true</disallowNotEverStorable>
          <thingDefs>
            <li>Nutrient_Block</li>
          </thingDefs>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <disallowNotEverStorable>true</disallowNotEverStorable>
          <thingDefs>
            <li>Nutrient_Block</li>
          </thingDefs>
        </filter>
      </defaultStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <designationCategory>VCHE_PipeNetworks</designationCategory>
    <surfaceType>Item</surfaceType>
    <canOverlapZones>false</canOverlapZones>
    <comps>
      <li Class="PipeSystem.CompProperties_ConvertResourceToThing">
        <pipeNet>VNPE_NutrientPasteNet</pipeNet>
        <maxOutputStackSize>1</maxOutputStackSize>
        <thing>Nutrient_Block</thing>
		<ratio>10</ratio>
      </li>
	  <li Class="CompProperties_Flickable" />
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>100</basePowerConsumption>
      </li>
    </comps>
    <researchPrerequisites>
      <li>NutrientPaste</li>
    </researchPrerequisites>
    <drawerType>MapMeshAndRealTime</drawerType>
  </ThingDef>
</Defs>