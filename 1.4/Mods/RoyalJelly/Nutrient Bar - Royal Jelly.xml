<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<ThingDef ParentName="DrugBase">
		<defName>Nutrient_Bar_RoyalInsectJelly</defName>
		<label>Nutrient Bar with Royal Insect Jelly</label>
		<description>A bar of compressed nutrient paste, a full meal you can stick in your pocket. This bar has been infused with royal insect jelly.</description>
		<graphicData>
			<texPath>Things/Item/Drug/Nutrient_Bar</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
			<drawSize>1.0</drawSize>
			<!--<color>(111,131,71)</color>-->
		</graphicData>
		<stackLimit>75</stackLimit>
		<statBases>
			<WorkToMake>1000</WorkToMake>
			<MarketValue>5</MarketValue>
			<Mass>0.1</Mass>
			<Nutrition>0.8</Nutrition>
		</statBases>
		<techLevel>Industrial</techLevel>
		<ingestible>
			<joyKind>Chemical</joyKind>
            <joy>0.016</joy>
			<preferability>DesperateOnly</preferability>
			<foodType>Processed</foodType>
			<nurseable>true</nurseable>
			<drugCategory>Medical</drugCategory>
			<baseIngestTicks>250</baseIngestTicks>
			<ingestSound>Meal_Eat</ingestSound>
			<ingestHoldOffsetStanding>
				<northDefault>
				<offset>(0.21,0,0.05)</offset>
				</northDefault>
			</ingestHoldOffsetStanding>
			<ingestHoldUsesTable>false</ingestHoldUsesTable>
			<ingestCommandString>Eat {0}</ingestCommandString>
			<ingestReportString>Eating {0}.</ingestReportString>
			<useEatingSpeedStat>true</useEatingSpeedStat>
			<outcomeDoers>
				<li Class="IngestionOutcomeDoer_GiveHediff">
				<hediffDef>VFEI_RoyalJellyHigh</hediffDef>
				<severity>0.10</severity>
				<toleranceChemical>VFEI_RoyalJellyChemical</toleranceChemical>
				</li>
				<li Class="IngestionOutcomeDoer_GiveHediff">
				<hediffDef>VFEI_RoyalJellyTolerance</hediffDef>
				<severity>0.0032</severity>
				<divideByBodySize>true</divideByBodySize>
				</li>
				<li Class="VFEI.IngestionOutcomeDoer_Immunity">
				<percent>0.5</percent>
				</li>
			</outcomeDoers>
		</ingestible>
		<comps>
			<li Class="CompProperties_Drug">
				<chemical>VFEI_RoyalJellyChemical</chemical>
				<addictiveness>0.0035</addictiveness>
				<existingAddictionSeverityOffset>0.02</existingAddictionSeverityOffset>
				<needLevelOffset>0.09</needLevelOffset>
				<minToleranceToAddict>0.15</minToleranceToAddict>
				<isCombatEnhancingDrug>true</isCombatEnhancingDrug>
				<listOrder>500</listOrder>
			</li>
		</comps>
	</ThingDef>	

		<RecipeDef>
    <defName>Make_Nutrient_Bar_RoyalInsectJelly</defName>
    <label>make ten nutrient bars with royal insect jelly</label>
    <description>Cut a nutrient block into nutrient bars, and infusing them with royal insect jelly.</description>
    <jobString>Making nutrient bars with royal insect jelly.</jobString>
    <workSpeedStat>DrugCookingSpeed</workSpeedStat>
    <workSkill>Cooking</workSkill>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Drug</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>2500</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
	<recipeUsers>
		<li>DrugLab</li>
	</recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Nutrient_Block</li>
          </thingDefs>
        </filter>
        <count>1</count>
		</li>
		<li>
		<filter>
          <thingDefs>
            <li>VFEI_RoyalInsectJelly</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Nutrient_Block</li>
		<li>VFEI_RoyalInsectJelly</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Nutrient_Bar_RoyalInsectJelly>10</Nutrient_Bar_RoyalInsectJelly>
    </products>
	<researchPrerequisites>
		<li>NutrientPaste</li>
	</researchPrerequisites>
	</RecipeDef>
</Defs>