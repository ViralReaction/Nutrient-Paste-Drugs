<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
		<defName>Make_Nutrient_Bar_Alkahest</defName>
		<label>make ten nutrient bars with alkahest</label>
		<description>Cut a nutrient block into nutrient bars, and infusing them with alkahest.</description>
		<jobString>Making nutrient bars with alkahest.</jobString>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<workSkill>Cooking</workSkill>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Drug</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>2500</workAmount>
		<targetCountAdjustment>1</targetCountAdjustment>
		<recipeUsers>
			<li>DrugLab</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Nutrient_Block</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>SD_Alkahest</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Nutrient_Block</li>
				<li>SD_Alkahest</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Nutrient_Bar_Alkahest>10</Nutrient_Bar_Alkahest>
		</products>
		<researchPrerequisites>
			<li>NutrientPaste</li>
		</researchPrerequisites>
	</RecipeDef>

