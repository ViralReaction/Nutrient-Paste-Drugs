<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef>
		<defName>Make_Nutrient_Bar_Hemogen</defName>
		<label>make ten nutrient bars with hemogen</label>
		<description>Cut a nutrient block into nutrient bars, and infusing them with hemogen.</description>
		<jobString>Making nutrient bars with hemogen.</jobString>
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<workSkill>Cooking</workSkill>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Drug</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<workAmount>2500</workAmount>
		<targetCountAdjustment>1</targetCountAdjustment>
		<recipeUsers>
			<li>DrugLab</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Nutrient_Block</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>HemogenPack</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Nutrient_Block</li>
				<li>HemogenPack</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Nutrient_Bar_Hemogen>10</Nutrient_Bar_Hemogen>
		</products>
		<researchPrerequisites>
			<li>NutrientPaste</li>
		</researchPrerequisites>
	</RecipeDef>
  
</Defs>